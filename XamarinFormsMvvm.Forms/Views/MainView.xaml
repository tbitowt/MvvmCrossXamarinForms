             xmlns:viewModels="clr-namespace:XamarinFormsMvvm.Core.ViewModels;assembly=XamarinFormsMvvm.Core"
             Title="MainView Page"
             >
  <ContentPage.BindingContext>
		<viewModels:MainViewModel />
	</ContentPage.BindingContext>
  <ContentView>
    <StackLayout>
